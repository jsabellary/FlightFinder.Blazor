<div class="container py-5">
    <!-- Airport selection -->
    <div class="row mb-4">
        <!-- From airport -->
        <div class="col-md-5">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i>✈</i>&nbsp;From</span>
                </div>
                <input list="airports" placeholder="Airport code..." class="form-control" @bind="criteria.FromAirport" />
            </div>
        </div>
        <div class="col-md-1 text-center align-self-center">➝</div>

        <!-- To airport -->
        <div class="col-md-5">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i>✈</i>&nbsp;To</span>
                </div>
                <input list="airports" placeholder="Airport code..." class="form-control" @bind="criteria.ToAirport" />
            </div>
        </div>
    </div>

    <!-- Departure / return dates -->
    <div class="row mb-4">
        <!-- Depart date -->
        <div class="col-md-5">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i>🗓</i>&nbsp;Depart</span>
                </div>
                <input type="date" @bind="criteria.OutboundDate" @bind:format="yyyy-MM-dd" class="form-control" />
            </div>
        </div>
        <div class="col-md-1 text-center align-self-center">➝</div>

        <!-- Return date -->
        <div class="col-md-5">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i>🗓</i>&nbsp;Return</span>
                </div>
                <input type="date" @bind="criteria.ReturnDate" @bind:format="yyyy-MM-dd" class="form-control" />
            </div>
        </div>
    </div>

    <!-- Class / search -->
    <div class="row mb-4">
        <div class="col-md-6">
            <select class="custom-select" @bind="criteria.TicketClass">
                <option value=@TicketClass.Economy>Economy</option>
                <option value=@TicketClass.PremiumEconomy>Premium Economy</option>
                <option value=@TicketClass.Business>Business</option>
                <option value=@TicketClass.First>First</option>
            </select>
        </div>
        <div class="col-md-6 text-md-right">
            <button @onclick="() => OnSearch.InvokeAsync(criteria)" type="button" class="btn btn-primary btn-block">
                <strong>Search ➝</strong>
            </button>
        </div>
    </div>
</div>
<AirportsList />

@code
{
    [Parameter]
    public EventCallback<SearchCriteria> OnSearch { get; set; }

    private SearchCriteria criteria = new SearchCriteria("LHR", "SEA");
}
